				<lb rend="4-line"/> <!-- prossemica -->
				<ab n="ab_02" rend="first_line_indented" type="parag" part="N">
					<s n="s_02" type="sentence" part="N">
						<lb facs="#LL1.8_line_1r_02" n="2" xml:id="LL1.8_lb_1r_02"/>
