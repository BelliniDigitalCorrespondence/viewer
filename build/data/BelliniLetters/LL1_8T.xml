			<!-- Fronte-recto -->
			<div n="t_01" type="letter-body" part="N" org="uniform" sample="complete">
				<salute n="ab_01">
					<s n="s_01" type="sentence" part="N">
						<lb facs="#LL1.8_line_1r_01" n="1" xml:id="LL1.8_lb_1r_01"/>
						Mio caro
						<persName type="person">Amico</persName>
