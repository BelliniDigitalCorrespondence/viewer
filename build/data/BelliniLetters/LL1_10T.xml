			<pb n="LL1.10.2v" xml:id="LL1.10_fol_2v" facs="data/test-img/LL1.10/LL1-10_0004.dzi"/>
			<div type="destination" part="N" org="uniform" sample="complete">
				<ab type="receiver" xml:id="LL1.10_line_2v_01_multiple" part="N">
					<address xml:lang="fr">
						<lb facs="#LL1.10_line_2v_01" n="1" xml:id="LL1.10_lb_2v_01"/>
						<addrLine>à Monsieur
